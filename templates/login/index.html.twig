{% extends 'base.html.twig' %}

{% block title %}Login
{% endblock %}

{% block header %}
    {%  include 'partials/site-header.html.twig' %}
{% endblock %}

{% block body_id 'login' %}

{% block body %}
    {% if error %}
        <div class="c-alert c-alert--danger" role="alert">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

	<section class="c-login u-padding-top-large">
        <div class="o-wrapper">
            <h2 class="o-title u-margin-bottom">Login</h2>

            <form action="{{ path('login') }}" method="post" novalidate>
                <div class="o-field" data-validation="email">
                    <label class="o-input__label" for="email">Email address</label>
                    <input type="email" id="email" name="_email" class="o-input" value="{{ last_username }}" required />
                    <div class="o-field__error">Please enter a valid email address!</div>
                </div>

                <div class="o-field" data-validation="required">
                    <label class="o-input__label" for="password">Password</label>
                    <input type="password" id="password" name="_password" class="o-input" required />
                    <div class="o-field__error">Please enter a password!</div>
                </div>

                <div class="o-field">
                    <div class="o-checkbox u-margin-vertical-small">
                        <input  type="checkbox" id="remember_me" name="_remember_me" checked />
                        <label for="remember_me">Remember me</label>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="o-field">
                    <div class="o-grid o-grid--small u-padding-bottom-small">
                        <div class="o-grid__item u-1/2@small-desktop o-flex o-flex--align-items-center u-padding-vertical-small">
                            <a href="#!">Forgot password?</a>
                        </div>
                        <div class="o-grid__item u-1/2@small-desktop u-text-right">
                            <button type="submit" class="o-button o-button--primary o-button--full">
                                Sign in
                                <span class="o-icon o-icon--chevron-right"></span>
                            </button>
                        </div>
                    </div>
                </div>

                <hr />

                <p>Not a member? <a href="{{ path('register') }}">Register</a></p>
            </form>
        </div>
    </section>
{% endblock %}
