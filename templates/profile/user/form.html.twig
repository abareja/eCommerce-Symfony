{% extends 'profile/base.html.twig' %}

{% block content %}
    <div class="c-profile">
        <h2 class="c-profile__title o-title u-margin-bottom" data-aos="fade-up">{{ title }}</h2>

            {{ form_start(form, {
                'attr': {
                    'novalidate': 'novalidate',
                }
            }) }}
                <div class="o-grid o-grid--small">
                    <div class="o-grid__item u-1/2@small-desktop">
                        <div class="o-field{% if form_errors(form.firstname) %} is-invalid{% endif %}" 
                            data-validation="required"
                            data-aos="fade-up"
                            data-aos-delay="50">
                            <label class="o-input__label" for="{{ form.firstname.vars.id }}">{% trans %}Firstname{% endtrans %}</label>
                            {{ form_widget(form.firstname, {
                                'attr': {'class': 'o-input'}
                            }) }}
                            <div class="o-field__error">{% trans %}Please enter a valid firstname!{% endtrans %}</div>
                        </div>
                    </div>
                    <div class="o-grid__item u-1/2@small-desktop">
                        <div class="o-field{% if form_errors(form.lastname) %} is-invalid{% endif %}" 
                            data-validation="required"
                            data-aos="fade-up"
                            data-aos-delay="50">
                            <label class="o-input__label" for="{{ form.lastname.vars.id }}">{% trans %}Lastname{% endtrans %}</label>
                            {{ form_widget(form.lastname, {
                                'attr': {'class': 'o-input'}
                            }) }}
                            <div class="o-field__error">{% trans %}Please enter a valid lastname!{% endtrans %}</div>
                        </div>                    
                    </div>
                </div>

                <div class="o-field{% if form_errors(form.email) %} is-invalid{% endif %}" 
                    data-validation="email"
                    data-aos="fade-up"
                    data-aos-delay="50">
                    <label class="o-input__label" for="{{ form.email.vars.id }}">{% trans %}E-mail address{% endtrans %}</label>
                    {{ form_widget(form.email, {
                        'attr': {'class': 'o-input'}
                    }) }}
                    <div class="o-field__error">{% trans %}Please enter a valid e-mail!{% endtrans %}</div>
                </div>  

                <div class="o-field u-margin-top-small">
                    <div class="o-grid o-grid--small u-padding-bottom-small">
                        <div class="o-grid__item u-1/2@small-desktop">
                            
                        </div>
                        <div class="o-grid__item u-1/2@small-desktop u-text-right">
                            <button type="submit" class="o-button o-button--primary o-button--full" data-aos="fade-up" data-aos-delay="300">
                                {{ buttonText }}
                                <span class="o-icon o-icon--chevron-right"></span>
                            </button>
                        </div>
                    </div>
                </div>

                <hr data-aos="fade-in" data-aos-delay="350" />

            {{ form_end(form) }}
        
    </div>
{% endblock %}
